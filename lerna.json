{
  "$schema": "https://unpkg.com/lerna@8.1.9/schemas/lerna-schema.json",
  "command": {
    "version": {
      "allowBranch": ["main"],
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(%p): publish %v",
      "tagVersionPrefix": "%p/v"
    }
  },
  "ignoreChanges": ["**/*.md"],
  "packages": ["projects/*"],
  "version": "independent",
  "npmClient": "yarn"
}
